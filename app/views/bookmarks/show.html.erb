                      <option value = <%=an_employee.id%>><%=an_employee.first_name%> <%=an_employee.last_name%></option>
                    <%end%>
                  </select>

                  <input type = hidden id="user_id_box" name="query_user_id" value= <%= @current_user.id%>>


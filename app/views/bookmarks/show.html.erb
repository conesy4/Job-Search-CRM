        </td>

        <td>
          <%= a_contact.last_incoming_comm %>
        </td>

        <td>
          <%= a_contact.followup_date %>
        </td>

        <td>
          <%= a_contact.communications_count %>
        </td>

        <td>
          <%= a_contact.advocates_count %>
        </td>

        <td>
          <a href="/contacts/<%= a_contact.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
